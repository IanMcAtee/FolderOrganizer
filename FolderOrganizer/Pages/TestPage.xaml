<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderOrganizer.Pages.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderOrganizer.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row ="0" Grid.ColumnSpan="2" Background="Black"/>
        <Border Grid.Row ="1" Grid.Column="0" Background="#121212"/>
        <Border Grid.Row ="1" Grid.Column="1" Background="#242424"/>
        
        <!--MAIN HEADING PANEL-->
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <TextBlock
                Text="Advanced Settings"
                Style="{StaticResource FolderOrganizerH1Header}"/>
        </StackPanel>
        
        <!--LEFT COLUMN PANEL-->
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Center">
            <TextBlock
                Text="Organization Categories"
                Style="{StaticResource FolderOrganizerH2Header}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal">
                    <Button
                        Content="Select All"/>
                    <Button
                        Content="Remove All"/>
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button
                        Content="Expand All"/>
                    <Button
                        Content="Collapse All"/>

                </StackPanel>
            </Grid>
            

            <ListView
                x:Name="defaultCategoriesListView"
                SelectionMode="Single"
                BorderThickness="1"
                BorderBrush="Gray"
                Height="600">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:DefaultCategoryViewModel">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="400"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Column="0"
                                Margin="0,6,0,6">

                                <ToggleSwitch
                                    OnContent="{x:Bind Caft.Category}"
                                    OffContent="{x:Bind Caft.Category}"/>
                            </StackPanel>

                            <!--Collapsible Category Settings Panels -->
                            <StackPanel
                                Grid.Column="1">
                                <StackPanel
                                    Orientation="Vertical"
                                    Visibility="Visible">

                                    <TextBlock
                                        Text="Associated File Types:"
                                        FontWeight="Bold"
                                        Margin="0,0,0,12"/>
                                    <TextBox
                                        x:Name="fileTypesTextBox"
                                        PlaceholderText=".pdf, .doc, .docx"
                                        Margin="0,0,0,12"/>
                                    <Button
                                        Content="Apply"
                                        HorizontalAlignment="Right"
                                        Style="{StaticResource AccentButtonStyle}"/>
                                    <ToggleSwitch
                                        OnContent="Use Custom File Types"
                                        OffContent="Use Custom File Types"/>
                                    <Button
                                        Click="DefaultCategoryCollapse_OnClick"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,0,12">
                                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70E;"/>
                                        <!--<Image
                                            Source="/Assets/ArrowUpIcon20dp.png"
                                            Width="20"/>-->
                                    </Button>
                                    <Line
                                        X1="0" X2="400"
                                        StrokeThickness="2"
                                        Stroke="White"/>

                                </StackPanel>
                                <Button
                                    Click="{x:Bind Expand_OnClick}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom">
                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE700;"/>
                                    <!--<Image 
                                        Source="/Assets/SettingsIcon18dp.png" 
                                        Width="20"/>-->
                                </Button>



                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

    </Grid>
</Page>
