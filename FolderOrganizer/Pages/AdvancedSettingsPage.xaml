<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderOrganizer.AdvancedSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderOrganizer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#242424">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row ="0" Grid.ColumnSpan="3" Background="Black"/>
        <Border Grid.Row ="1" Grid.Column="0" Background="#121212"/>
        <Border Grid.Row ="1" Grid.Column="1" Background="#242424"/>
        <Border Grid.Row ="1" Grid.Column="2" Background="#484848"/>

        <StackPanel 
            Grid.Row="0" 
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Text="Advanced Settings"
                FontSize="36"
                TextDecorations="Underline"
                FontWeight="Bold"/>
        </StackPanel>

        <!-- MAIN HEADING -->
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="24,24,0,0">
            <Button 
                Click="BackButton_OnClick" 
                Width="60">
                <Image Source="/Assets/ArrowBack24dp.png" />
            </Button>
        </StackPanel>

        <!-- FILE CATEGORIES PANE (GRID COLUMN 0) -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            x:Name="categoriesStackPanel"
            Margin="0,24,0,0">

            <TextBlock
                Text="File Organization Categories"
                FontSize="24"
                FontWeight="Bold"
                Margin="0,0,0,12"/>
            <ToggleSwitch
                x:Name="selectAllCategoriesToggleSwitch"
                OnContent="Remove All"
                OffContent="Select All"
                FontWeight="Bold"
                Toggled="SelectAllCategories_OnToggle"/>
            <ListView
                x:Name="categoriesListView"
                BorderThickness="1"
                BorderBrush="Gray"
                CornerRadius="0"
                Width="300"
                HorizontalAlignment="Left"
                SelectionMode="None"
                Margin="0,0,0,12"
                Padding="0,0,0,0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <ToggleSwitch
                                OffContent="{Binding Category}"
                                OnContent="{Binding Category}"
                                FontWeight="Bold"
                                Tag="{Binding Category}"
                                Loaded="CategoryToggleSwitch_OnLoaded"
                                Toggled="CategoryToggleSwitch_OnToggle"/>
                            <Button
                                Margin="28,0,0,0">
                                <Image 
                                    Source="/Assets/RedCloseIcon20dp.png" 
                                    Width="15"
                                    Height="15"
                                    Stretch="Fill"/>
                                <Button.Flyout>
                                    <Flyout>
                                        <StackPanel>
                                            <TextBlock 
                                                Text="Permanently delete category?" Margin="0,0,0,12" />
                                            <Button 
                                                Content="Delete" 
                                                Background="DarkRed"/>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>

                            </Button>
                            <Button
                                Margin="8,0,0,0">
                                <Image 
                                    Source="/Assets/MoreIcon20dp.png" 
                                    Width="15"
                                    Height="15"
                                    Stretch="Fill"/>
                                
                            </Button>

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel
                Margin="0,0,0,0">
                <StackPanel 
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    Width="300"
                    Padding="12"
                    Margin="0,0,0,12">
                    <TextBox
                        x:Name="customCategoryNameTextBox"
                        PlaceholderText="Category Name"
                        TextWrapping="Wrap"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,0,0,12"/>
                    <TextBlock
                        Text="Associated File Types:"
                        FontWeight="Bold"
                        Margin="0,0,0,8"/>
                    <TextBox
                        x:Name="customCategoryFileTypesTextBox"
                        PlaceholderText="File types..."
                        TextWrapping="Wrap"
                        AcceptsReturn="False"
                        IsSpellCheckEnabled="False"/>
                </StackPanel>
                <TextBlock
                    x:Name="addCustomCategoryResponseTextBlock"
                    Text="The category, documents, was added successfully"
                    TextWrapping="Wrap"
                    Visibility="Collapsed"/>
            </StackPanel>
            <Button
                Content="Add"
                Click="AddCustomCategoryAndFileTypes_OnClick"
                Width="300">
            </Button>

            <ContentDialog
                x:Name="addCustomCategoryContentDialog"
                CloseButtonText="Close">
                
                <StackPanel>
                    <TextBox
                        x:Name="customCategoryNameTextBox2"
                        PlaceholderText="Category Name"
                        TextWrapping="Wrap"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,0,0,12"/>
                    <TextBlock
                        Text="Associated File Types:"
                        FontWeight="Bold"
                        Margin="0,0,0,8"/>
                    <TextBox
                        x:Name="customCategoryFileTypesTextBox2"
                        PlaceholderText="File types..."
                        TextWrapping="Wrap"
                        AcceptsReturn="False"
                        IsSpellCheckEnabled="False"/>
                </StackPanel>
                
            </ContentDialog>
        </StackPanel>

        <!-- FILE TYPE ASSOCIATIONS PANE (GRID COLUMN 1) -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,24,0,0">
            <TextBlock
                Text="File Type Associations"
                FontSize="24"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Margin="0,0,0,12"/>
            <TextBlock
                Text="To customize the file types associated with a category:"
                Width="300"
                HorizontalAlignment="Left"
                TextWrapping="Wrap"
                Margin="0,0,0,12"/>

            <ListView
                x:Name="fileTypeListView"
                BorderThickness="1"
                BorderBrush="Gray"
                CornerRadius="10"
                Width="350"
                Height="700"
                HorizontalAlignment="Left"
                SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel 
                            Orientation="Vertical" 
                            Margin="0,12,0,0"
                            Tag="{Binding Category}">
                            <TextBlock
                                Tag="{Binding Category}"
                                Text="{Binding Category}"
                                FontSize="24"
                                FontWeight="Bold"
                                Loaded="FileTypesListViewItem_OnLoaded"/>
                            <ToggleSwitch
                                OnContent="Use Custom File Types"
                                OffContent="Use Custom File Types"
                                Toggled="AllowFileTypeEditing_OnToggle"
                                Tag="{Binding Category}"
                                Loaded="FileTypesListViewItem_OnLoaded"/>
                            <TextBlock
                                Text="Associated File Types:"
                                FontSize="14"
                                FontWeight="Bold"
                                Margin="0,0,0,8"/>
                            <TextBox
                                Text="{Binding FileTypesFormatted}"
                                Tag="{Binding Category}"
                                TextWrapping="Wrap"
                                AcceptsReturn="False"
                                IsSpellCheckEnabled="False"
                                IsEnabled="False"
                                IsEnabledChanged="CustomFileTextBox_OnEnableChanged"
                                Loaded="FileTypesListViewItem_OnLoaded"
                                Margin="0,0,0,8"/>
                            <Button
                                Content="Apply"
                                HorizontalAlignment="Right"
                                Background="SteelBlue"
                                Click="ApplyCustomFileTypes_OnClick"
                                Visibility="Collapsed"
                                Tag="{Binding Category}"
                                Loaded="FileTypesListViewItem_OnLoaded"/>
                            <Line 
                                X1="0" X2="300"
                                StrokeThickness="2"
                                Stroke="White"
                                Margin="0,12,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- NEW CATEGORY AND FOLDER OPTIONS PANE (GRID COLUMN 2) -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="300"
            Margin="0,24,0,0">
            
            <StackPanel
                Padding="0,0,0,12">
                <TextBlock
                    Text="Sub-Folder Options"
                    FontSize="24"
                    FontWeight="Bold"
                    Margin="0,0,0,12"/>
                <ToggleSwitch
                    OnContent="Move all sub-folders to new folder"
                    OffContent="Move all sub-folders to new folder"
                    FontWeight="Bold"/>
                <ToggleSwitch
                    OnContent="Organize files within sub-folders"
                    OffContent="Organize files within sub-folders"
                    FontWeight="Bold"/>
                <ToggleSwitch
                    OnContent="Delete sub-folders after organization"
                    OffContent="Delete sub-folders after organization"
                    FontWeight="Bold"/>
            </StackPanel>

            <StackPanel>
                <TextBlock
                Text="About"
                FontSize="24"
                FontWeight="Bold"
                Margin="0,0,0,12"/>
                <StackPanel
                Orientation="Horizontal"
                    Margin="0,0,0,8">
                    <TextBlock
                    Text="Version:"
                    FontWeight="Bold"
                    Margin="0,0,8,0"/>
                    <TextBlock
                    Text="Development Build 0.1"/>
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
                    <TextBlock
                        Text="License:"
                        FontWeight="Bold"
                        Margin="0,0,8,0"/>
                    <TextBlock
                        Text="MIT"/>
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
                    <TextBlock
                        Text="Developer:"
                        FontWeight="Bold"
                        Margin="0,0,8,0"/>
                    <TextBlock
                        Text="Ian McAtee"/>
                </StackPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
